{
  "name": "wesleywarnell.com",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run snowpack -- --optimize & cross-env NODE_ENV=production npm run postcss",
    "postcss": "postcss tailwind.css > src/tailwind.css",
    "prepare": "npm run snowpack",
    "servor": "servor src --browse --reload",
    "snowpack": "snowpack --clean --include 'src/**/*.js' --dest 'src/web_modules'",
    "start": "npm run snowpack & npm run postcss && npm run servor"
  },
  "dependencies": {
    "htm": "^3.0.4",
    "preact": "^10.4.1",
    "preact-router": "^3.2.1",
    "tailwindcss": "^1.3.5"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "servor": "^3.2.0",
    "snowpack": "^1.7.1"
  }
}
